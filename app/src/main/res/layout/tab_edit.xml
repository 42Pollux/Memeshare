<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:chip="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="1dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    tools:context="com.pollux.memeshare.MainActivity$PlaceholderFragment"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/textViewTags1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:text="Recently used tags..." />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:background="@color/colorGrey">

        <com.plumillonforge.android.chipview.ChipView
            android:id="@+id/chipview_recently"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            chip:chip_background="@color/colorTag"
            chip:chip_background_selected="@color/colorWhite"
            chip:chip_corner_radius="16dp"
            chip:chip_line_spacing="4dp"
            chip:chip_padding="90dp"
            chip:chip_side_padding="6dp"
            chip:chip_spacing="600dp" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </FrameLayout>

    <TextView
        android:id="@+id/textViewTags2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:text="Added tags..." />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:background="@color/colorGrey">

        <com.plumillonforge.android.chipview.ChipView
            android:id="@+id/chipview_added"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            chip:chip_background="@color/colorTag"
            chip:chip_background_selected="@color/colorWhite"
            chip:chip_corner_radius="16dp"
            chip:chip_line_spacing="4dp"
            chip:chip_padding="90dp"
            chip:chip_side_padding="6dp"
            chip:chip_spacing="600dp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </FrameLayout>


</LinearLayout>
